# ------------------------------------------------------- #
# Configuration for LLDB
# ------------------------------------------------------- #

# This file is automatically sourced by LLDB when it starts.
command script import ~/.lldb/LLDB_Formatters

# Set the prompt for LLDB
settings set prompt "(LLDB) "

# Debugging output and display settings
settings set target.max-children-count 512
settings set target.max-string-summary-length 1024
settings set target.prefer-dynamic-value run-target

# Auto-confirm dangerous operations
settings set auto-confirm true

# Show disassembly with source
settings set target.inline-breakpoint-strategy always
settings set target.use-hex-immediates false

# Memory and thread settings
settings set target.max-memory-read-size 2048

# History and logging
settings set interpreter.save-transcript true
# settings set target.process.thread.trace-thread true

# Breakpoint settings
settings set target.load-script-from-symbol-file true

# Display format preferences
settings set target.hex-immediate-style c